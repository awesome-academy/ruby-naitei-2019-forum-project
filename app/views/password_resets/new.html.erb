<%= form_for(:password_reset, url: password_resets_path, html: {class: "form-login-signup"}) do |f| %>
  <h2><%= t "brand" %></h2>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
  </div>
  <div class="row">
    <div class="col-4">
      <%= f.submit t(".submit"), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
