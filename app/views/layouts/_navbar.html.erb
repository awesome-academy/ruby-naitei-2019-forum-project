<nav class="navbar navbar-expand-lg navbar-light bg-white">
  <%= link_to t("brand"), root_path, class: "navbar-brand" %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <ul class="navbar-nav mr-auto">
    <%= form_for :searchs, url: search_path, method: :get, html: {class: "form-inline my-2 my-lg-0"} do |f| %>
      <%= search_field_tag :q, nil, class: "form-control mr-sm-2" %>
      <%= f.submit t("search"), class: "btn btn-primary my-2 my-sm-0" %>
    <% end %>
  </ul>
  <% if logged_in? %>
    <ul class="navbar-nav">
      <li class="nav-item">
        <ul class="nav navbar-nav">
          <li class="dropdown">
            <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-expanded="false">
              <%= t "welcome" %>, <%= current_user.name %> <b class="caret"></b>
            </a>
            <div class="dropdown-menu dropdown-menu-right position-absolute" aria-labelledby="navbarDropdown">
              <%= link_to t("log_out"), logout_path, method: :delete, class: "dropdown-item" %>
              <div class="dropdown-divider"></div>
              <%= link_to t("your_profile"), current_user, class: "dropdown-item" %>
            </div>
          </li>
        </ul>
      </li>
    </ul>
  <% else %>
    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to t("log_in"), login_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to t("sign_up"), signup_path, class: "nav-link" %>
      </li>
    </ul>
  <% end %>
</nav>
