<div class="card popular-post">
  <div class="card-header">
    <% if post.member %>
      <%= link_to post.member.sub_forum.name, post.member.sub_forum  %>
  <% end %>
  </div>
  <div class="card-body">
    <h5 class="card-title">
      <%= link_to post.title, post %>
    </h5>
    <p class="card-text">
      <%= post.content %>
    </p>
  </div>
</div>
