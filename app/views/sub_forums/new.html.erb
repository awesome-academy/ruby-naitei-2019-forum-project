<%= form_for(@sub_forum, html: {class: "form-login-signup"}) do |f| %>
  <h2><%= t "brand" %></h2>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %>
  </div>

  <%= f.submit t("static_pages.home.create_sub_forum"), class: "btn btn-lg btn-primary btn-block" %>
<% end %>
