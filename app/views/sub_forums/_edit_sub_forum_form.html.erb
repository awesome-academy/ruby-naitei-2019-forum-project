<div class="card">
  <div class="card-header">Subforum details</div>
  <div class="card-body">
    <h5 class="card-title"><%= @sub_forum.name %></h5>
    <div class="row">
      <div class="col-6">
        <%= pluralize(@sub_forum.members.size, t("member_string")) %>
      </div>
      <div class="col-6" style="border-left: solid 1px;">
        Lorem ifsum
      </div>
    </div>
    <hr>
    <%= form_for(@sub_forum) do |f| %>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
      </div>
      <%= f.submit t(".update_description"),
            class: "btn btn-lg btn-primary btn-block full-width" %>
    <% end %>
  </div>
</div>
