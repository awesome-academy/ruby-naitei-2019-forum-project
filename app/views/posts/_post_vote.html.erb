<div id="post-vote" >
  <%= form_tag post_path, remote: true do %>
    <%= hidden_field_tag "interact_type", "0" %>
    <%= hidden_field_tag "vote", 1 %>
    <%= submit_tag "upvote" %>
  <% end %>

  <%= post.votes %>
  
  <%= form_tag post_path, remote: true do %>
    <%= hidden_field_tag "interact_type", "0" %>
    <%= hidden_field_tag "vote", -1 %>
    <%= submit_tag "downvote" %>
  <% end %>
</div>
