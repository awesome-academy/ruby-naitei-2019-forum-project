<%= form_for(:session, url: login_path, html: {class: "form-login-signup"}) do |f| %>
  <h2><%= t "brand" %></h2>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control input-email" %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= link_to t(".forgot_password"), new_password_reset_path %>
    <%= f.password_field :password, class: "form-control input-password" %>
  </div>
  <div class="form-group">
    <%= f.label :remember_me do %>
      <%= f.check_box :remember_me %>
      <span><%= t ".remember_me" %></span>
    <% end %>
  </div>
  <div class="row">
    <div class="col-4">
      <%= f.submit t("log_in"), class: "btn btn-primary" %>
    </div>
    <div class="col-8">
      <span class="float-right"><%= link_to t(".sign_up_now"), signup_path %></span>
    </div>
  </div>
<% end %>
