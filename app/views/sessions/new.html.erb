<h1><%= t ".log_in" %></h1>

<%= form_for(:session, url: login_path) do |f| %>
  <%= f.label t(".email") %>
  <%= f.email_field :email %>

  <%= f.label t(".password") %>
  <%= f.password_field :password %>
  
  <%= f.label :remember_me do %>
    <%= f.check_box :remember_me %>
    <span><%= t ".remember_me" %></span>
  <% end %>

  <%= f.submit t(".log_in") %>
<% end %>
<p><%= link_to t(".sign_up_now"), signup_path %></p>
