<%= form_for(@user, html: {class: "form-login-signup"}) do |f| %>
  <h2><%= t "brand" %></h2>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control input-email" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control input-password" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, t(".confirmation") %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>
  <%= f.submit t(".create_my_account"), class: "btn btn-lg btn-primary btn-block" %>
<% end %>
