<h1><%= t ".sign_up" %></h1>

<%= form_for(@user) do |f| %>
  <%= f.label t(".name") %>
  <%= f.text_field :name %>

  <%= f.label t(".email") %>
  <%= f.email_field :email %>

  <%= f.label t(".password") %>
  <%= f.password_field :password %>

  <%= f.label t(".confirmation") %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit t(".create_my_account") %>
<% end %>
